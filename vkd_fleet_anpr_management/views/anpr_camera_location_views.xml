<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_anpr_camera_location_list" model="ir.ui.view">
        <field name="name">anpr.camera.location.list</field>
        <field name="model">anpr.camera.location</field>
        <field name="arch" type="xml">
            <list string="Camera Locations">
                <field name="name"/>
                <field name="source"/>
                <field name="state" widget="badge" decoration-success="state == 'running'"
                       decoration-danger="state == 'error'" decoration-warning="state in ('starting', 'stopping')"
                       decoration-info="state == 'stopped'"/>
                <field name="description" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_anpr_camera_location_form" model="ir.ui.view">
        <field name="name">anpr.camera.location.form</field>
        <field name="model">anpr.camera.location</field>
        <field name="arch" type="xml">
            <form string="Camera Location">
                <header>
                    <button name="action_start_stream" string="Start Stream" type="object" class="btn-primary"
                            invisible="state in ('running', 'starting', 'stopping')" icon="fa-play"/>
                    <button name="action_stop_stream" string="Stop Stream" type="object" class="btn-danger"
                            invisible="state not in ('running', 'starting', 'stopping')" icon="fa-stop"/>
                    <field name="state" widget="statusbar" statusbar_visible="stopped,running,error"/>
                </header>
                <sheet>
                    <div class="alert alert-danger" role="alert" invisible="state != 'error'"
                         style="margin-bottom: 15px;">
                        <strong>Error Details:</strong>
                        <br/>
                        <field name="state_message" readonly="1" nolabel="1"/>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., Front Gate Camera"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Configuration">
                            <field name="source" placeholder="e.g., 0, 1, or rtsp://..."/>
                        </group>
                    </group>

                    <separator string="Description"/>
                    <field name="description" placeholder="A brief description of the camera's location and purpose."
                           nolabel="1"/>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_anpr_camera_location_search" model="ir.ui.view">
        <field name="name">anpr.camera.location.search</field>
        <field name="model">anpr.camera.location</field>
        <field name="arch" type="xml">
            <search string="Search Camera Locations">
                <field name="name"/>
                <field name="description"/>
                <field name="source"/>
                <filter name="state" string="Status" context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>

    <record id="action_anpr_camera_location" model="ir.actions.act_window">
        <field name="name">Camera Locations</field>
        <field name="res_model">anpr.camera.location</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new camera location.
            </p>
            <p>
                Define different locations where your ANPR cameras are installed.
            </p>
        </field>
    </record>

</odoo>